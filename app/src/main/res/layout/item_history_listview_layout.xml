<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/listview_item_style"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:layout_gravity="center_vertical">
    <TextView
        style="@style/item_name_listview_item"
        android:layout_width="1dp"
        android:layout_height="42dp"
        android:id="@+id/itemIDTextView"/>
    <TextView
        style="@style/item_name_listview_item"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_weight="100"
        android:id="@+id/itemNameTextView"/>
    <TextView
        style="@style/item_unit_listview_item"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:id="@+id/itemUnitTextView"/>
    <TextView
        style="@style/item_unit_listview_item"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:id="@+id/itemQuantityTextView"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:backgroundTint="#4a8149"
        android:background="#4a8149"
        android:text="X"
        android:textSize="18dp"
        android:id="@+id/deleteItemButton"/>

</LinearLayout>